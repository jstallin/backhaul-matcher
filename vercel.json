{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/cron/refresh-requests.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/refresh-requests",
      "schedule": "*/15 * * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/reset-password",
      "destination": "/index.html"
    }
  ]
}
