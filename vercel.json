{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/reset-password",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/update-diesel-prices",
      "schedule": "0 14 * * 2"
    }
  ]
}
